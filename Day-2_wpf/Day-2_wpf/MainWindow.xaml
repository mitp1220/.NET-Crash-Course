<Window x:Class="Day_2_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day_2_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800">
    <!-- <Grid> -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="20" 
                    Background="Orange">
            <!-- WrapPanel -->
            <GroupBox Header="2.WrapPanel" Margin="10,0,10,20">
                <WrapPanel Background="Turquoise" ItemWidth="80" ItemHeight="30" Margin="5">
                    <Button Content="A"/>
                    <Button Content="B"/>
                    <Button Content="C"/>
                    <Button Content="D"/>
                    <Button Content="E"/>
                </WrapPanel>
            </GroupBox>

            <!-- 4. Grid -->
            <GroupBox Header="4. Grid" Margin="15">
                <Grid Background="Red" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="20" Text="row-0 col-0" 
                               Background="Lavender" Grid.Row="0" 
                               Grid.Column="0"/>
                    <TextBlock FontSize="20" Text="row-0 col-1" 
                               Background="Moccasin" Grid.Row="0" 
                               Grid.Column="1"/>
                    <TextBlock FontSize="20" Text="row-0 col-2" 
                               Background="Khaki" Grid.Row="0" 
                               Grid.Column="2"/>
                    <TextBlock FontSize="20" Text="row-1 col-0" 
                               Background="LemonChiffon" Grid.Row="1" 
                               Grid.Column="0"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="GreenYellow" Grid.Row="1" 
                               Grid.Column="1"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="LightGreen" Grid.Row="1" 
                               Grid.Column="2"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="LightBlue" Grid.Row="2" 
                               Grid.Column="0"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="Yellow" Grid.Row="2" 
                               Grid.Column="1"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="DarkGreen" Grid.Row="2" 
                               Grid.Column="2"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="Coral" Grid.Row="3" 
                               Grid.Column="0"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="CornflowerBlue" Grid.Row="3" 
                               Grid.Column="1"/>
                    <TextBlock FontSize="20" Text="row-1 col-1" 
                               Background="Firebrick" Grid.Row="3" 
                               Grid.Column="2"/>
                </Grid>
            </GroupBox>
            
            <!-- UnifromGrid -->
            <GroupBox Header="5. UniformGrid" Margin="15">
                <UniformGrid Rows="2" Columns="3" Background="DarkOrchid">
                    <Button Content="1"/>
                    <Button Content="2"/>
                    <Button Content="3"/>
                    <Button Content="4"/>
                    <Button Content="5"/>
                    <Button Content="6"/>
                </UniformGrid>
            </GroupBox>

            <!-- 5. Canvas -->
            <!-- Canvas allows absolute positioning using coordinates -->
            <!-- useful for drawing, applications, diagrams and games -->
            <!-- not recommended for resizable UIs -->
            <GroupBox Header="5. Canvas" Margin="0,0,0,20">
                <Canvas Background="CornflowerBlue" Height="150">
                    <Button Content="50,30" Canvas.Left="50" Canvas.Top="30"/>
                    <Button Content="120,80" Canvas.Left="120" Canvas.Top="80"/>
                </Canvas>
            </GroupBox>

            <!-- 6. ViewBox -->
            <!-- Viewbox scales its single child to fit the available space -->
            <!--Stretch Properties: fill, uniform, uniformtofill 
            useful for scalable diagrams, charts or any text -->
            <GroupBox Header="6. ViewBox" Background="Maroon" Margin="0,10,0,20">
                <Viewbox Stretch="Uniform" Height="50">
                    <TextBlock Text="Scalable Text" FontSize="30" Foreground="PeachPuff"/>
                </Viewbox>
            </GroupBox>
            
            <!-- 7. Border -->
            <GroupBox Header="7. Border" Margin="0,0,0,15">
                <Border BorderBrush="Chocolate" BorderThickness="3" CornerRadius="10" Background="Ivory" Padding="15">
                    <StackPanel>
                        <TextBlock Text="BorderExample" FontSize="16" FontWeight="Bold"/>
                        <Button Content="Inside Border" Width="250" Height="35" Margin="5"/>
                    </StackPanel>
                </Border>
            </GroupBox>
            
            <!-- 8. ScrollViewer --> 
            <GroupBox Header="8. ScrollViewer" Background="RosyBrown" Margin="0,0,0,20">
                <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Line-1"/>
                        <TextBlock Text="Line-2"/>
                        <TextBlock Text="Line-3"/>
                        <TextBlock Text="Line-4"/>
                        <TextBlock Text="Line-5"/>
                        <TextBlock Text="Line-6"/>
                        <TextBlock Text="Line-7"/>
                        <TextBlock Text="Line-8"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
    <!-- </Grid> -->
</Window>
